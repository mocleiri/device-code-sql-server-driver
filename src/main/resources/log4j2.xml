<?xml version="1.0" encoding="UTF-8" ?>
<Configuration>

    <Appenders>
        <File name="MyFile" fileName="${sys:user.home}/dev-code-log.log">
            <PatternLayout>
                <Pattern>%d %p %c{1.} [%t] %m%n</Pattern>
            </PatternLayout>
        </File>
        <Async name="Async">
            <AppenderRef ref="MyFile"/>
        </Async>
    </Appenders>
    <Loggers>
        <Root level="info">
            <AppenderRef ref="Async" />
        </Root>
    </Loggers>
</Configuration>
